RewriteEngine On

# Si el archivo o carpeta existe, no tocar
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Home
RewriteRule ^$ pages/index.php [L]

# Servicios bonitos -> PHP runtime
RewriteRule ^servicios/([a-z0-9_-]+)/?$ pages/service-detail.php?service=$1 [L,QSA]

# (opcional) Contacto bonito
RewriteRule ^contacto/?$ pages/contact.php [L]
